<header class="header">
  <div class="logo">
    <img src="/images/logo.png" alt="Logo">
  </div>
  {{#if session.isNotAuthenticated}}
    {{login-form
      on-login=(action "authenticate")}}
  {{else}}
    <div class="signout">
      <button class="pv-button" onclick={{action "signOut"}}>
        Sign Out
      </button>
    </div>
  {{/if}}
</header>

{{#if session.isNotAuthenticated}}
  <h2 class="signin-warning">Please sign in to continue!</h2>
{{/if}}

<main class="content" disabled={{session.isNotAuthenticated}}>
  {{outlet}}
</main>
